  "bugs": {
    "url": "https://github.com/tanishkulshrestha/express-server/issues"
  },
  "homepage": "https://github.com/tanishkulshrestha/express-server#readme",
  "dependencies": {
    "@types/node": "^10.12.18",
    "body-parser": "^1.18.3",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "husky": "^1.3.1",
    "jsonwebtoken": "^8.4.0",
    "mongoose": "^5.4.8",
    "tslint": "^5.12.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "gulp-clean": "^0.4.0",
